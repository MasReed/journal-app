
<%- include("partials/header"); -%>

<main class="container">

    <h1>Compose a Journal Entry</h1>

    <form class="" action="/compose" method="post">
        <div class="form-group">
            <label for="post"><h5>Post Title</h5></label>
            <input class="form-control" type="text" name="postTitle" value="">
        </div>

        <div class="form-group">
            <label for=""><h5>Content</h5></label>
            <textarea class="form-control" name="postContent" rows="8" cols="80"></textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-secondary" type="submit" name="publishButton">Publish!</button>
        </div>
    </form>

</main>

<%- include("partials/footer"); -%>
